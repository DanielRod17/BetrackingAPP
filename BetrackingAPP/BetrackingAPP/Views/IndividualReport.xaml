<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:xfx="clr-namespace:Xfx;assembly=Xfx.Controls"
    mc:Ignorable="d"
    x:Class="BetrackingAPP.Views.IndividualReport"
	x:Name="Page">
	<ContentPage Title="Detail" x:Name="Detail">
		<ScrollView>
			<Grid>
				<StackLayout x:Name="detailPanel" BackgroundColor="#f4f4f4">
					<StackLayout>
						<Label Text="D E T A I L S"
							FontSize="30"
							TextColor="White"
							HeightRequest="90"
							HorizontalTextAlignment="Center"
							VerticalTextAlignment="Center"
							BackgroundColor="#15212f"/>
					</StackLayout>
					<Grid  Margin="20, 20, 20, 0" RowSpacing="0" BackgroundColor="#f4f4f4">
						<Grid.RowDefinitions>
							<RowDefinition Height="45"/>
							<RowDefinition Height="45"/>
							<RowDefinition Height="{Binding DisplayReportMode}"/>
							<RowDefinition Height="{Binding DisplayHeight}"/>
							<RowDefinition Height="{Binding DisplayHeight}"/>
							<RowDefinition Height="{Binding DisplayHeight}"/>
							<RowDefinition Height="45"/>
							<RowDefinition Height="{Binding DisplayHeight}"/>
							<RowDefinition Height="{Binding DisplayHeight}"/>
							<RowDefinition Height="{Binding DisplayHeight}"/>
							<RowDefinition Height="{Binding DisplayHeight}"/>
							<RowDefinition Height="45"/>
							<RowDefinition Height="{Binding DisplayHeight}"/>
							<RowDefinition Height="{Binding DisplayHeight}"/>
							<RowDefinition Height="{Binding DisplayHeight}"/>
							<RowDefinition Height="{Binding DisplayHeight}"/>
							<RowDefinition Height="{Binding DisplayHeight}"/>
							<RowDefinition Height="{Binding DisplayHeight}"/>
							<RowDefinition Height="{Binding DisplayHeight}"/>
							<RowDefinition Height="{Binding DisplayHeight}"/>
							<RowDefinition Height="{Binding DisplayHeight}"/>
							<RowDefinition Height="{Binding DisplayHeight}"/>
							<RowDefinition Height="{Binding DisplayHeight}"/>
							<RowDefinition Height="{Binding DisplayHeight}"/>
							<RowDefinition Height="{Binding DisplayHeight}"/>
							<RowDefinition Height="{Binding DisplayHeight}"/>
							<RowDefinition Height="{Binding DisplayHeight}"/>
							<RowDefinition Height="{Binding DisplayHeight}"/>
							<RowDefinition Height="{Binding DisplayHeight}"/>
							<RowDefinition Height="{Binding DisplayHeight}"/>
							<RowDefinition Height="{Binding DisplayHeight}"/>
							<RowDefinition Height="{Binding DisplayHeight}"/>
							<RowDefinition Height="{Binding DisplayHeight}"/>
							<RowDefinition Height="{Binding DisplayHeight}"/>
							<RowDefinition Height="{Binding DisplayHeight}"/>
							<RowDefinition Height="{Binding DisplayHeight}"/>
							<RowDefinition Height="{Binding DisplayHeight}"/>
							<RowDefinition Height="{Binding DisplayHeight}"/>
							<RowDefinition Height="{Binding DisplayHeight}"/>
							<RowDefinition Height="{Binding DisplayHeight}"/>
							<RowDefinition Height="{Binding DisplayHeight}"/>
							<RowDefinition Height="{Binding DisplayHeight}"/>
							<RowDefinition Height="45"/>
							<RowDefinition Height="45"/>
							<RowDefinition Height="50"/>
						</Grid.RowDefinitions>
						<Grid.ColumnDefinitions>
							<ColumnDefinition Width="*"/>
							<ColumnDefinition Width="*"/>
							<ColumnDefinition Width="*"/>
							<ColumnDefinition Width="*"/>
							<ColumnDefinition Width="*"/>
							<ColumnDefinition Width="*"/>
							<ColumnDefinition Width="*"/>
						</Grid.ColumnDefinitions>
						<!-- Inputs -->
						<Label TextColor="Black" 
							BackgroundColor="#f4f4f4" 
							Text="Assignment" 
							Grid.Row="0" 
							Grid.Column="0" 
							Grid.ColumnSpan="3" 
							HorizontalTextAlignment="Start"
							VerticalTextAlignment="Center"
							WidthRequest="40"
							Margin="10,0,0,0"/>
						<!--<xfx:XfxComboBox Placeholder="Select an Assignment" Grid.Row="0" Grid.Column="3" Grid.ColumnSpan="4" 
							Text="{Binding AssignmentName}"
							ItemsSource="{Binding Assignments}"
							SortingAlgorithm="{Binding SortingAlgorithm}"
							HorizontalTextAlignment="Center"
							WidthRequest="300"/>-->
						<Picker Grid.Row="0" Grid.Column="3" Grid.ColumnSpan="4"
							Title="Assignments"
							WidthRequest="300"
							Margin="0,0,10,0"
							ItemsSource="{Binding Assignments}"
							SelectedItem="{Binding AssignmentName}"
						/>
						<Label TextColor="Black" 
							BackgroundColor="#f4f4f4" 
							Text="Name" 
							Grid.Row="1" 
							Grid.Column="0" 
							Grid.ColumnSpan="3" 
							HorizontalTextAlignment="Start"
							VerticalTextAlignment="Center"
							WidthRequest="40"
							Margin="10,0,0,0"/>
						<Entry Placeholder="Name" Grid.Row="1" Grid.Column="3" Grid.ColumnSpan="4" 
							Text="{Binding Name}"
							FontSize="Small"
							Margin="0,0,10,0"/>
						<Label TextColor="Black" 
							BackgroundColor="#f4f4f4"
							Text="Type of Report" 
							Grid.Row="2" 
							Grid.Column="0" 
							Grid.ColumnSpan="3" 
							HorizontalTextAlignment="Start"
							VerticalTextAlignment="Center"
							WidthRequest="40"
							Margin="10,0,0,0"/>
						<Picker Grid.Row="2" Grid.Column="3" Grid.ColumnSpan="4" 
							SelectedIndex="{Binding ReportType}" HorizontalOptions="FillAndExpand" Margin="0,0,10,0"
						>
							<Picker.Items>
								<x:String>Travel</x:String>
								<x:String>Expenses Only</x:String>
							</Picker.Items>
						</Picker>
						<Label TextColor="Black" 
							BackgroundColor="#f4f4f4"
							Text="Type of Travel" 
							Grid.Row="3" 
							Grid.Column="0" 
							Grid.ColumnSpan="3" 
							HorizontalTextAlignment="Start"
							VerticalTextAlignment="Center"
							WidthRequest="40"
							Margin="10,0,0,0"/>
						<Picker Grid.Row="3" Grid.Column="3" Grid.ColumnSpan="4" 
							SelectedIndex="{Binding Type_of_travel}" HorizontalOptions="FillAndExpand" Margin="0,0,10,0">
							<Picker.Items>
								<x:String>Business Travel (BEPC Life Science)</x:String>
								<x:String>BE PRO (IT Division)</x:String>
								<x:String>Other Travel</x:String>
							</Picker.Items>
						</Picker>
						<Label TextColor="Black" 
							BackgroundColor="#f4f4f4"
							Text="Flight" 
							Grid.Row="4" 
							Grid.Column="0" 
							Grid.ColumnSpan="3" 
							HorizontalTextAlignment="Start"
							VerticalTextAlignment="Center"
							WidthRequest="40"
							Margin="10,0,0,0"/>
						<Picker Grid.Row="4" Grid.Column="3" Grid.ColumnSpan="4" 
							SelectedIndex="{Binding Flight}" HorizontalOptions="FillAndExpand" Margin="0,0,10,0">
							<Picker.Items>
								<x:String>Required</x:String>
								<x:String>Not Required</x:String>
							</Picker.Items>
						</Picker>
						<!--  FROM -->
						<Label TextColor="#15212f" 
							BackgroundColor="#f4f4f4"
							FontAttributes="Bold"
							Text="F R O M" 
							Grid.Row="5" 
							Grid.Column="0" 
							Grid.ColumnSpan="7" 
							HorizontalTextAlignment="Start"
							VerticalTextAlignment="Center"
							WidthRequest="40"
							Margin="10,0,0,0"/>
						<Label TextColor="Black" 
							BackgroundColor="#f4f4f4"
							Text="Departure Date" 
							Grid.Row="6" 
							Grid.Column="0" 
							Grid.ColumnSpan="3" 
							HorizontalTextAlignment="Start"
							VerticalTextAlignment="Center"
							WidthRequest="40"
							Margin="10,0,0,0"/>
						<DatePicker Grid.Row="6" Grid.Column="3" Grid.ColumnSpan="4" 
							MinimumDate="01/01/2019"
