							<Label Text="{Binding ProjectName}" Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="2"/>
							<Label Text="From" Grid.Column="0" Grid.Row="3" FontAttributes="Bold"/>
							<Label Text="{Binding FromDate, StringFormat='{0:dd/MM/yyyy}'}" Grid.Column="1" Grid.Row="3" Grid.ColumnSpan="2"/>
							<Label Text="To"  Grid.Column="0" Grid.Row="4" FontAttributes="Bold"/>
							<Label Text="{Binding ToDate, StringFormat='{0:dd/MM/yyyy}'}" Grid.Column="1" Grid.Row="4" Grid.ColumnSpan="2"/>
							<Label Text="Baggage"  Grid.Column="0" Grid.Row="5" FontAttributes="Bold"/>
							<Label Text="{Binding BaggageExp, StringFormat='${0} USD'}" Grid.Column="1" Grid.Row="5" Grid.ColumnSpan="2"/>
							<Label Text="Airfare"  Grid.Column="0" Grid.Row="6" FontAttributes="Bold"/>
							<Label Text="{Binding AirfareExp, StringFormat='${0} USD'}" Grid.Column="1" Grid.Row="6" Grid.ColumnSpan="2"/>
							<Label Text="Car Rental"  Grid.Column="0" Grid.Row="7" FontAttributes="Bold"/>
							<Label Text="{Binding CarRentalExp, StringFormat='${0} USD'}" Grid.Column="1" Grid.Row="7" Grid.ColumnSpan="2"/>
							<Label Text="Lodging"  Grid.Column="0" Grid.Row="8" FontAttributes="Bold"/>
							<Label Text="{Binding LodgingExp, StringFormat='${0} USD'}" Grid.Column="1" Grid.Row="8" Grid.ColumnSpan="2"/>
							<Label Text="Parking"  Grid.Column="0" Grid.Row="9" FontAttributes="Bold"/>
							<Label Text="{Binding ParkingExp, StringFormat='${0} USD'}" Grid.Column="1" Grid.Row="9" Grid.ColumnSpan="2"/>
							<Label Text="Gasoline"  Grid.Column="0" Grid.Row="10" FontAttributes="Bold"/>
							<Label Text="{Binding GasolineExp, StringFormat='${0} USD'}" Grid.Column="1" Grid.Row="10" Grid.ColumnSpan="2"/>
							<Label Text="Miscellaneous"  Grid.Column="0" Grid.Row="11" FontAttributes="Bold"/>
							<Label Text="{Binding MiscExp, StringFormat='${0} USD'}" Grid.Column="1" Grid.Row="11" Grid.ColumnSpan="2"/>
							<Label Text="Meals"  Grid.Column="0" Grid.Row="12" FontAttributes="Bold"/>
							<Label Text="{Binding MealsExp, StringFormat='${0} USD'}" Grid.Column="1" Grid.Row="12" Grid.ColumnSpan="2"/>
							<Label Text="Tools Supplies"  Grid.Column="0" Grid.Row="13" FontAttributes="Bold"/>
							<Label Text="{Binding ToolsExp, StringFormat='${0} USD'}" Grid.Column="1" Grid.Row="13" Grid.ColumnSpan="2"/>
							<Label Text="Change Fees"  Grid.Column="0" Grid.Row="14" FontAttributes="Bold"/>
							<Label Text="{Binding ChangeExp, StringFormat='${0} USD'}" Grid.Column="1" Grid.Row="14" Grid.ColumnSpan="2"/>
							<Label Text="Transportation"  Grid.Column="0" Grid.Row="15" FontAttributes="Bold"/>
							<Label Text="{Binding TransportationExp, StringFormat='${0} USD'}" Grid.Column="1" Grid.Row="15" Grid.ColumnSpan="2"/>
							<Label Text="Tolls"  Grid.Column="0" Grid.Row="16" FontAttributes="Bold"/>
							<Label Text="{Binding TollExp, StringFormat='${0} USD'}" Grid.Column="1" Grid.Row="16" Grid.ColumnSpan="2"/>
							<Label Text="Per Diem"  Grid.Column="0" Grid.Row="17" FontAttributes="Bold"/>
							<Label Text="{Binding PerDiemExp, StringFormat='${0} USD'}" Grid.Column="1" Grid.Row="17" Grid.ColumnSpan="2"/>
							<Label Text="Billable"  Grid.Column="0" Grid.Row="18" FontAttributes="Bold"/>
							<Label Text="{Binding Billable, StringFormat='${0} USD'}" Grid.Column="1" Grid.Row="18" Grid.ColumnSpan="2"/>
							<Label Text="Refundable"  Grid.Column="0" Grid.Row="19" FontAttributes="Bold"/>
							<Label Text="{Binding Refundable, StringFormat='${0} USD'}" Grid.Column="1" Grid.Row="19" Grid.ColumnSpan="2"/>
							<Label Text="Total"  Grid.Column="0" Grid.Row="20" FontAttributes="Bold"/>
							<Label Text="{Binding Total, StringFormat='${0} USD'}" Grid.Column="1" Grid.Row="20" Grid.ColumnSpan="2"/>
						</Grid>
						<Button
							Text = "Submit Report"
							BackgroundColor="#15212f"
							Clicked="SubmitReport"
							IsVisible="{Binding HasPropertyValueChanged}"
							TextColor="White"
							FontSize="20"
						/>
					</StackLayout>
				</StackLayout>
				<StackLayout AbsoluteLayout.LayoutFlags="All" 
					AbsoluteLayout.LayoutBounds="0, 0, 1, 1" BackgroundColor="#032143" Opacity="0.8" IsVisible="{Binding IsLoading}">
					<StackLayout VerticalOptions="CenterAndExpand">
						<ActivityIndicator IsRunning="True" Color="#f6d43b" HeightRequest="60" WidthRequest="60"/>
						<Label Text="Loading..." FontSize="19" TextColor="White" HorizontalTextAlignment="Center" VerticalOptions="Center"/>
					</StackLayout>
				</StackLayout>
			</Grid>
		</ScrollView>
	</ContentPage>
	<ContentPage Title="Expenses">
		<ScrollView>
			<Grid>
				<StackLayout x:Name="ExpensesList" BackgroundColor="#F4F4F4">
					<Label Text="E X P E N S E S"
						FontSize="30"
						TextColor="White"
						HeightRequest="90"
						HorizontalTextAlignment="Center"
						VerticalTextAlignment="Center"
						BackgroundColor="#15212f"/>
					<ListView
						x:Name="TimecardsList"
						ItemsSource="{Binding ExpensesList}"
						RowHeight="180"
						SeparatorVisibility="None"
						BackgroundColor="#f4f4f4">
						<ListView.ItemTemplate>
							<DataTemplate>
								<ViewCell >
									<Frame CornerRadius="5"
									Margin="10,2,10,0"
									BackgroundColor="White"
									HasShadow="False"
									BorderColor="#e4e4e4">
										<StackLayout>
											<Label Text="{Binding CategoryName}" FontSize="Large"/>
											<Label Text="{Binding ExpenseDate, StringFormat='Date: {0:dd/MM/yyyy}'}" Margin="10,0,0,0"/>
											<Label Text="{Binding ValorFinal, StringFormat='Quantity: ${0} USD'}"/>
											<Label IsVisible="{Binding MxOn}" Text="{Binding Quantity, StringFormat='Quantity: ${0} MXN'}"/>
											<Label IsVisible="{Binding DescriptionOn}" Text="{Binding Name, StringFormat='Description: {0}'}"/>
											<Label IsVisible="{Binding RefundableOn}" Text="Refundable"/>
										</StackLayout>
									</Frame>
								</ViewCell>
							</DataTemplate>
						</ListView.ItemTemplate>
					</ListView>
					<Button
						Text="Add Expenses"
						BackgroundColor="#15212f"
						Clicked="AddExpenses"
						IsVisible="{Binding HasPropertyValueChanged}"
						TextColor="White"
						FontSize="20"
					/>
				</StackLayout>
				<StackLayout AbsoluteLayout.LayoutFlags="All" 
					AbsoluteLayout.LayoutBounds="0, 0, 1, 1" BackgroundColor="#032143" Opacity="0.8" IsVisible="{Binding IsLoading}">
					<StackLayout VerticalOptions="CenterAndExpand">
						<ActivityIndicator IsRunning="True" Color="#f6d43b" HeightRequest="60" WidthRequest="60"/>
						<Label Text="Loading..." FontSize="19" TextColor="White" HorizontalTextAlignment="Center" VerticalOptions="Center"/>
					</StackLayout>
				</StackLayout>
			</Grid>
		</ScrollView>
	</ContentPage>
	<ContentPage Title="Files">
		<Grid>
			<StackLayout x:Name="Files" BackgroundColor="#F4F4F4">
				<Label Text="F I L E S"
					FontSize="30"
					TextColor="White"
					HeightRequest="90"
					HorizontalTextAlignment="Center"
					VerticalTextAlignment="Center"
					BackgroundColor="#15212f"/>
				<ListView
					x:Name="FilesList"
					ItemsSource="{Binding FilesList}"
					IsPullToRefreshEnabled="false"
					HasUnevenRows="true"
					SeparatorVisibility="None"
					BackgroundColor="#f4f4f4">
					<ListView.ItemTemplate>
						<DataTemplate>
							<ViewCell >
								<Frame CornerRadius="5"
									Margin="10,2,10,0"
									BackgroundColor="White"
									HasShadow="False"
									BorderColor="#e4e4e4">
									<StackLayout>
										<Label Text="{Binding Name}" FontSize="Large"/>
										<Label Text="{Binding Date, StringFormat='Date: {0}'}"/>
										<Label Text="{Binding Size, StringFormat='Size: {0}'}"/>
										<Button
									Command="{Binding Path=BindingContext.DownloadCommand, Source={x:Reference Page}}"
									CommandParameter="{Binding URL}"
									Text="Download" 
									TextColor="White"
									FontSize="14"
									BackgroundColor="#15212f"
									BorderRadius="5"
								/>
										<Button
									Command="{Binding Path=BindingContext.DeleteFileCommand, Source={x:Reference Page}}"
									CommandParameter="{Binding .}"
									Text="Delete" 
									TextColor="White"
									FontSize="14"
									BackgroundColor="#15212f"
									BorderRadius="5"
								/>
									</StackLayout>
								</Frame>
							</ViewCell>
						</DataTemplate>
					</ListView.ItemTemplate>
				</ListView>
				<Button
					Text="Add Files"
					BackgroundColor="#15212f"
					Clicked="AddFiles"
					IsVisible="{Binding HasPropertyValueChanged}"
					TextColor="White"
					FontSize="20"
				/>
			</StackLayout>
			<StackLayout AbsoluteLayout.LayoutFlags="All" 
				AbsoluteLayout.LayoutBounds="0, 0, 1, 1" BackgroundColor="#032143" Opacity="0.8" IsVisible="{Binding IsLoading}">
				<StackLayout VerticalOptions="CenterAndExpand">
					<ActivityIndicator IsRunning="True" Color="#f6d43b" HeightRequest="60" WidthRequest="60"/>
					<Label Text="Loading..." FontSize="19" TextColor="White" HorizontalTextAlignment="Center" VerticalOptions="Center"/>
				</StackLayout>
			</StackLayout>
		</Grid>
	</ContentPage>
</TabbedPage>