							Grid.ColumnSpan="7" 
							HorizontalTextAlignment="Start"
							VerticalTextAlignment="Center"
							WidthRequest="40"
							Margin="10,0,0,0"/>
						<Label TextColor="Black" 
							BackgroundColor="#f4f4f4"
							Text="Date of Arrival" 
							Grid.Row="13" 
							Grid.Column="0" 
							Grid.ColumnSpan="3" 
							HorizontalTextAlignment="Start"
							VerticalTextAlignment="Center"
							WidthRequest="40"
							Margin="10,0,0,0"/>
