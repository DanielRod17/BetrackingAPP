							SelectedItem="{Binding State_To}" HorizontalOptions="FillAndExpand" Margin="0,0,10,0">
						</Picker>
						<Label TextColor="Black" 
							BackgroundColor="#f4f4f4"
							Text="City" 
							Grid.Row="17" 
							Grid.Column="0" 
							Grid.ColumnSpan="3" 
							HorizontalTextAlignment="Start"
							VerticalTextAlignment="Center"
							WidthRequest="40"
							Margin="10,0,0,0"/>
						<Picker Grid.Row="17" Grid.Column="3" Grid.ColumnSpan="4"  ItemsSource="{Binding CitiesListDest}"
							SelectedItem="{Binding City_To}" HorizontalOptions="FillAndExpand" Margin="0,0,10,0">
						</Picker>
						<Label TextColor="Black" 
							BackgroundColor="#f4f4f4"
							Text="Seating Preference" 
							Grid.Row="18" 
							Grid.Column="0" 
							Grid.ColumnSpan="3" 
							HorizontalTextAlignment="Start"
							VerticalTextAlignment="Center"
							WidthRequest="40"
							Margin="10,0,0,0"/>
						<Picker Grid.Row="18" Grid.Column="3" Grid.ColumnSpan="4" 
							SelectedIndex="{Binding Seating_preference}" HorizontalOptions="FillAndExpand" Margin="0,0,10,0">
