							SelectedIndex="{Binding Car_Rental_Time}" HorizontalOptions="FillAndExpand" Margin="0,0,10,0">
							<Picker.Items>
								<x:String>Morning</x:String>
								<x:String>Afternoon</x:String>
								<x:String>Night</x:String>
							</Picker.Items>
						</Picker>
						<Label TextColor="Black" 
							BackgroundColor="#f4f4f4"
							Text="Car Size" 
							Grid.Row="37" 
							Grid.Column="0" 
							Grid.ColumnSpan="3" 
							HorizontalTextAlignment="Start"
							VerticalTextAlignment="Center"
							WidthRequest="40"
							Margin="10,0,0,0"/>
						<Picker Grid.Row="37" Grid.Column="3" Grid.ColumnSpan="4" 
							SelectedIndex="{Binding Car_Size_Preference}" HorizontalOptions="FillAndExpand" Margin="0,0,10,0">
							<Picker.Items>
								<x:String>Small (Sedan, coupe, etc.)</x:String>
							</Picker.Items>
						</Picker>
						<Label TextColor="Black" 
							BackgroundColor="#f4f4f4"
							Text="Car Return Date" 
							Grid.Row="38" 
							Grid.Column="0" 
							Grid.ColumnSpan="3" 
							HorizontalTextAlignment="Start"
							VerticalTextAlignment="Center"
							WidthRequest="40"
							Margin="10,0,0,0"/>
						<DatePicker Grid.Row="38" Grid.Column="3" Grid.ColumnSpan="4" 
							Date="{Binding Car_Rental_Return}"
							MinimumDate="01/01/2019"
							FontSize="Small"
							Margin="0,0,10,0"/>
						<Label TextColor="Black" 
							BackgroundColor="#f4f4f4"
							Text="Approximate Time of Return" 
							Grid.Row="39" 
							Grid.Column="0" 
							Grid.ColumnSpan="3" 
							HorizontalTextAlignment="Start"
							VerticalTextAlignment="Center"
							WidthRequest="40"
							Margin="10,0,0,0"/>
						<Picker Grid.Row="39" Grid.Column="3" Grid.ColumnSpan="4" 
							SelectedIndex="{Binding Car_Rental_Return_Time}" HorizontalOptions="FillAndExpand" Margin="0,0,10,0">
							<Picker.Items>
								<x:String>Morning</x:String>
								<x:String>Afternoon</x:String>
								<x:String>Night</x:String>
							</Picker.Items>
						</Picker>
						<Label TextColor="Black" 
							BackgroundColor="#f4f4f4"
							Text="Reason of request" 
							Grid.Row="40" 
							Grid.Column="0" 
							Grid.ColumnSpan="3" 
							HorizontalTextAlignment="Start"
							VerticalTextAlignment="Center"
							WidthRequest="40"
							Margin="10,0,0,0"/>
						<Entry Grid.Row="40" Grid.Column="3" Grid.ColumnSpan="4" 
							Placeholder="Reason Request" Text="{Binding Reason_Request}" Margin="0,0,10,0"/>
						<Label TextColor="Black" 
							BackgroundColor="#f4f4f4"
							Text="Emergency contact" 
							Grid.Row="41" 
							Grid.Column="0" 
							Grid.ColumnSpan="3" 
							HorizontalTextAlignment="Start"
							VerticalTextAlignment="Center"
							WidthRequest="40"
							Margin="10,0,0,0"/>
						<Entry Grid.Row="41" Grid.Column="3" Grid.ColumnSpan="4"  
							Placeholder="Emergency Contact" Text="{Binding Emergency_Contact}" Margin="0,0,10,0"/>
						<Label TextColor="Black" 
							BackgroundColor="#f4f4f4" 
							Text="Status" 
							Grid.Row="42" 
							Grid.Column="0" 
							Grid.ColumnSpan="3" 
							HorizontalTextAlignment="Start"
							VerticalTextAlignment="Center"
							WidthRequest="40"
							Margin="10,0,0,0"/>
						<Picker Grid.Row="42" Grid.Column="3" Grid.ColumnSpan="4"
							SelectedIndex="{Binding Status}" HorizontalOptions="FillAndExpand" Margin="0,0,10,0">
							<Picker.Items>
								<x:String>Open</x:String>
								<x:String>Tentative</x:String>
							</Picker.Items>
						</Picker>
						<Button Grid.Row="44" Grid.Column="1" Grid.ColumnSpan="5" 
							Text="Update Report" 
							TextColor="White"
							FontSize="14"
							BackgroundColor="#14212f"
							BorderRadius="2"
							Command="{Binding UpdateReport}"
							IsVisible="{Binding IsTentative}" 
						/>
					</Grid>
				</StackLayout>
				<StackLayout AbsoluteLayout.LayoutFlags="All" 
					AbsoluteLayout.LayoutBounds="0, 0, 1, 1" BackgroundColor="#032143" Opacity="0.8" IsVisible="{Binding IsLoading}">
					<StackLayout VerticalOptions="CenterAndExpand">
						<ActivityIndicator IsRunning="True" Color="#f6d43b" HeightRequest="60" WidthRequest="60"/>
						<Label Text="Loading..." FontSize="19" TextColor="White" HorizontalTextAlignment="Center" VerticalOptions="Center"/>
					</StackLayout>
				</StackLayout>
			</Grid>
		</ScrollView>
	</ContentPage>
	<ContentPage Title="Related" x:Name="Related">
		<ScrollView>
			<Grid>
				<StackLayout x:Name="relatedPanel" BackgroundColor="#F4F4F4">
					<Label Text="R E L A T E D"
						FontSize="30"
						TextColor="White"
						HeightRequest="90"
						HorizontalTextAlignment="Center"
						VerticalTextAlignment="Center"
						BackgroundColor="#15212f"/>
					<StackLayout Margin="20, 20, 20, 0">
						<Grid>
							<Grid.RowDefinitions>
								<RowDefinition Height="30"/>
								<RowDefinition Height="45"/>
								<RowDefinition Height="45"/>
								<RowDefinition Height="45"/>
								<RowDefinition Height="45"/>
								<RowDefinition Height="45"/>
								<RowDefinition Height="45"/>
								<RowDefinition Height="45"/>
								<RowDefinition Height="45"/>
								<RowDefinition Height="45"/>
								<RowDefinition Height="45"/>
								<RowDefinition Height="45"/>
								<RowDefinition Height="45"/>
								<RowDefinition Height="45"/>
								<RowDefinition Height="45"/>
								<RowDefinition Height="45"/>
								<RowDefinition Height="45"/>
								<RowDefinition Height="45"/>
								<RowDefinition Height="45"/>
								<RowDefinition Height="45"/>
								<RowDefinition Height="45"/>
							</Grid.RowDefinitions>
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="*"/>
								<ColumnDefinition Width="*"/>
								<ColumnDefinition Width="*"/>
							</Grid.ColumnDefinitions>
							
							<Label Text="{Binding Name}" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="3" FontSize="Title"/>
							<Label Text="Status" Grid.Column="0" Grid.Row="1" FontAttributes="Bold"/>
							<Label Text="{Binding StatusName}" Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2"/>
