							VerticalTextAlignment="Center"
							WidthRequest="40"
							Margin="10,0,0,0">
							<Label.FontFamily>
								<OnPlatform x:TypeArguments="x:String">
									<!--<On Platform="Android" Value="Questrial-Regular.ttf#Questrial-Regular" />-->
									<On Platform="Android" Value="BebasNeue Bold.ttf#BebasNeue Bold" />
								</OnPlatform>
							</Label.FontFamily>
						</Label>
