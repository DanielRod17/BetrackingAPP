<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:local="clr-namespace:BetrackingAPP"
    mc:Ignorable="d"
    x:Class="BetrackingAPP.Views.AddFiles"
	x:Name="Page"
	BackgroundColor="#f4f4f4">
    <Grid>
		<ScrollView>
			<StackLayout>
				<Label Text="ADD FILES"
					FontSize="30"
					TextColor="White"
					CharacterSpacing="2"
					HeightRequest="100"
					HorizontalTextAlignment="Center"
					VerticalTextAlignment="Center"
					BackgroundColor="#15212f">
					<Label.FontFamily>
						<OnPlatform x:TypeArguments="x:String">
							<On Platform="Android" Value="BebasNeue Bold.ttf#BebasNeue Bold" />
						</OnPlatform>
					</Label.FontFamily>
				</Label>
				<ListView Margin="10, 0, 10, 0"
					x:Name="MediasList"
					ItemsSource="{Binding Medias}"
					HeightRequest="{Binding MediasSize}"
					HasUnevenRows="true">
					<ListView.ItemTemplate>
						<DataTemplate>
							<ViewCell>
								<Frame CornerRadius="5"
									Padding="0"
									Margin="1"
									BackgroundColor="White"
									HasShadow="False">
									<StackLayout>
										<Image WidthRequest="400"
											HeightRequest="220"
											Source="{Binding Path}"/>
										<Label Margin="10, 0, 0, 0" Text="{Binding FileName}"/>
										<Button Text="Delete" 
											TextColor="White"
											FontSize="14"
											BackgroundColor="#15212f"
											BorderRadius="2"
											Margin="10"
											Command="{Binding Path=BindingContext.DeleteMedia, Source={x:Reference Page}}"
											CommandParameter="{Binding .}"/>
									</StackLayout>
								</Frame>
							</ViewCell>
						</DataTemplate>
					</ListView.ItemTemplate>
				</ListView>
				<ListView Margin="10, 0, 10, 0"
					HeightRequest="{Binding ArchivosSize}"
					ItemsSource="{Binding Archivos}"
					HasUnevenRows="true">
					<ListView.ItemTemplate>
						<DataTemplate>
							<ViewCell>
								<Frame CornerRadius="5"
									 Padding="0"
									 Margin="1"
									 BackgroundColor="White"
									 HasShadow="False">
									<StackLayout>
										<Image WidthRequest="400"
										   HeightRequest="220"
										   Source="{Binding Path}"/>
										<Label Margin="10, 0, 0, 0" Text="{Binding FileName}"/>
										<Button Text="Delete" 
											TextColor="White"
											FontSize="14"
											BackgroundColor="#15212f"
											BorderRadius="2"
											Margin="10"
											Command="{Binding Path=BindingContext.DeleteFile, Source={x:Reference Page}}"
											CommandParameter="{Binding .}"/>
									</StackLayout>
								</Frame>
							</ViewCell>
						</DataTemplate>
					</ListView.ItemTemplate>
				</ListView>
				<Grid Margin="10">
					<Grid.RowDefinitions>
						<RowDefinition Height="50"></RowDefinition>
						<RowDefinition Height="50"></RowDefinition>
					</Grid.RowDefinitions>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="*"></ColumnDefinition>
						<ColumnDefinition Width="*"></ColumnDefinition>
						<ColumnDefinition Width="*"></ColumnDefinition>
					</Grid.ColumnDefinitions>
					<Button Text="+ File"
						TextColor="#f4f4f4"
						CharacterSpacing="2"
						FontSize="18"
						BackgroundColor="#15212f"
						BorderRadius="2"
						Grid.Column="0"
						Grid.Row="0"
						Clicked="PickFile_Clicked">
						<Button.FontFamily>
							<OnPlatform x:TypeArguments="x:String">
								<On Platform="Android" Value="BebasNeue Bold.ttf#BebasNeue Bold" />
							</OnPlatform>
						</Button.FontFamily>
					</Button>
					<Button Text="+ Image"
						TextColor="#f4f4f4"
						Grid.Column="1"
						Grid.Row="0"
						CharacterSpacing="2"
						FontSize="18"
						BackgroundColor="#15212f"
						BorderRadius="2"
						Clicked="PickPhoto_Clicked">
						<Button.FontFamily>
							<OnPlatform x:TypeArguments="x:String">
								<On Platform="Android" Value="BebasNeue Bold.ttf#BebasNeue Bold" />
							</OnPlatform>
						</Button.FontFamily>
					</Button>
					<Button TextColor="#f4f4f4"
						Text="Camera"
						FontSize="18"
						BackgroundColor="#15212f"
						BorderRadius="2"
						Grid.Column="2"
						Grid.Row="0"
						Clicked="TakePhoto_Clicked">
						<Button.FontFamily>
							<OnPlatform x:TypeArguments="x:String">
								<On Platform="Android" Value="BebasNeue Bold.ttf#BebasNeue Bold" />
							</OnPlatform>
						</Button.FontFamily>
					</Button>
					<Button Text="Upload!" 
						TextColor="White"
						FontSize="24"
						Grid.Column="0"
						Grid.ColumnSpan="3"
						Grid.Row="1"
						BackgroundColor="#15212f"
						BorderRadius="2"
						Clicked="UploadFile_Clicked">
						<Button.FontFamily>
							<OnPlatform x:TypeArguments="x:String">
								<On Platform="Android" Value="BebasNeue Bold.ttf#BebasNeue Bold" />
							</OnPlatform>
						</Button.FontFamily>
					</Button>
				</Grid>
			</StackLayout>
		</ScrollView>
		<StackLayout AbsoluteLayout.LayoutFlags="All" AbsoluteLayout.LayoutBounds="0, 0, 1, 1" BackgroundColor="#15212f" Opacity="0.9" IsVisible="{Binding IsLoading}">
			<StackLayout VerticalOptions="CenterAndExpand">
				<ActivityIndicator IsRunning="True" Color="#f6d43b" HeightRequest="60" WidthRequest="60"/>
				<Label Text="Loading..." FontSize="19" TextColor="White" HorizontalTextAlignment="Center" VerticalOptions="Center">
					<Label.FontFamily>
						<OnPlatform x:TypeArguments="x:String">
							<On Platform="Android" Value="Questrial-Regular.ttf#Questrial-Regular" />
						</OnPlatform>
					</Label.FontFamily>
				</Label>
			</StackLayout>
		</StackLayout>
		<StackLayout AbsoluteLayout.LayoutFlags="All" AbsoluteLayout.LayoutBounds="0, 0, 0, 0" BackgroundColor="Transparent" IsVisible="{Binding IsLoading}">
			<StackLayout VerticalOptions="CenterAndExpand">
				<ActivityIndicator IsRunning="True" Color="#f6d43b" HeightRequest="40" WidthRequest="40" Margin="0, -26, 0, 0" RotationX="180"/>
			</StackLayout>
		</StackLayout>
	</Grid>
</ContentPage>