<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://xamarin.com/schemas/2014/forms/design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:xfx="clr-namespace:Xfx;assembly=Xfx.Controls"
    mc:Ignorable="d"
	xmlns:local="clr-namespace:BetrackingAPP"
	x:Class="BetrackingAPP.Views.IndividualCard"
	xmlns:android="clr-namespace:Xamarin.Forms.PlatformConfiguration.AndroidSpecific;assembly=Xamarin.Forms.Core"
	xmlns:BetrackingAPP="clr-namespace:BetrackingAPP.Views"
	android:TabbedPage.ToolbarPlacement="Bottom"
	android:TabbedPage.BarItemColor="White"
	android:TabbedPage.BarSelectedItemColor="#038cfc"
    BarBackgroundColor="#15212f"
    BarTextColor="White">
	<!--Pages can be added as references or inline-->
	<ContentPage Title="Detail" x:Name="Detail" Icon="home.png" >
		<ScrollView>
			<StackLayout x:Name="stackPanel">
				<Label Text="TIMECARD DETAIL"
					FontSize="40"
					CharacterSpacing="2"
					TextColor="White"
					Padding="20"
					HeightRequest="100"
					HorizontalTextAlignment="Center"
					VerticalTextAlignment="Center"
					BackgroundColor="#15212f">
					<Label.FontFamily>
						<OnPlatform x:TypeArguments="x:String">
							<!--<On Platform="Android" Value="Questrial-Regular.ttf#Questrial-Regular" />-->
							<On Platform="Android" Value="BebasNeue Bold.ttf#BebasNeue Bold" />
						</OnPlatform>
					</Label.FontFamily>
				</Label>
				<Grid 
					ColumnSpacing="10"
					Padding="15" 
					RowSpacing="10">
					<Grid.RowDefinitions>
						<RowDefinition Height="35"/>
						<RowDefinition Height="40"/>
						<RowDefinition Height="25"/>
						<RowDefinition Height="25"/>
						<RowDefinition Height="25"/>
						<RowDefinition Height="25"/>
						<RowDefinition Height="25"/>
						<RowDefinition Height="40"/>
						<RowDefinition Height="25"/>
						<RowDefinition Height="25"/>
						<RowDefinition Height="1"/>
						<RowDefinition Height="25"/>
						<RowDefinition Height="25"/>
						<RowDefinition Height="1"/>
						<RowDefinition Height="25"/>
						<RowDefinition Height="25"/>
						<RowDefinition Height="1"/>
						<RowDefinition Height="25"/>
						<RowDefinition Height="25"/>
						<RowDefinition Height="1"/>
						<RowDefinition Height="25"/>
						<RowDefinition Height="25"/>
						<RowDefinition Height="1"/>
						<RowDefinition Height="25"/>
						<RowDefinition Height="25"/>
						<RowDefinition Height="1"/>
						<RowDefinition Height="25"/>
						<RowDefinition Height="25"/>
						<RowDefinition Height="1"/>
						<RowDefinition Height="25"/>
						<RowDefinition Height="25"/>
						<RowDefinition Height="1"/>
					</Grid.RowDefinitions>
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="*"/>
						<ColumnDefinition Width="*"/>
						<ColumnDefinition Width="*"/>
						<ColumnDefinition Width="*"/>
					</Grid.ColumnDefinitions>
					<Label Grid.Column="0"
						Grid.Row="0"
						Grid.ColumnSpan="4"
						FontSize="18"
						Text="{Binding Assignment_Name}">
						<Label.FontFamily>
							<OnPlatform x:TypeArguments="x:String">
								<On Platform="Android" Value="Questrial-Regular.ttf#Questrial-Regular"/>
							</OnPlatform>
						</Label.FontFamily>
					</Label>
					<Image Source="calendar.png"
						Grid.Column="0"
						Grid.Row="1"/>
					<Label Grid.Column="1"
						Grid.ColumnSpan="3"
						Grid.Row="1"
						CharacterSpacing="2"
						Padding="15, 5, 0, 0"
						Text="Week Hours"
						FontSize="28"
						FontAttributes="Bold">
						<Label.FontFamily>
							<OnPlatform x:TypeArguments="x:String">
								<On Platform="Android" Value="BebasNeue Bold.ttf#BebasNeue Bold" />
							</OnPlatform>
						</Label.FontFamily>
					</Label>
					<Label Grid.Column="0"
						Grid.Row="2"
						FontAttributes="Bold"
						Text="Monday">
						<Label.FontFamily>
							<OnPlatform x:TypeArguments="x:String">
								<On Platform="Android" Value="BebasNeue Bold.ttf#BebasNeue Bold" />
							</OnPlatform>
						</Label.FontFamily>
					</Label>
					<Label Grid.Column="1"
						Grid.Row="2"
						HorizontalTextAlignment="End"
						Text="{Binding Mon_Hours}">
						<Label.FontFamily>
							<OnPlatform x:TypeArguments="x:String">
								<On Platform="Android" Value="Questrial-Regular.ttf#Questrial-Regular"/>
							</OnPlatform>
						</Label.FontFamily>
					</Label>
					<Label Grid.Column="2"
						Grid.Row="2"
						FontAttributes="Bold"
						Text="Tuesday">
						<Label.FontFamily>
							<OnPlatform x:TypeArguments="x:String">
								<On Platform="Android" Value="BebasNeue Bold.ttf#BebasNeue Bold" />
							</OnPlatform>
						</Label.FontFamily>
					</Label>
					<Label Grid.Column="3"
						Grid.Row="2"
						HorizontalTextAlignment="End"
						Text="{Binding Tue_Hours}">
						<Label.FontFamily>
							<OnPlatform x:TypeArguments="x:String">
								<On Platform="Android" Value="Questrial-Regular.ttf#Questrial-Regular"/>
							</OnPlatform>
						</Label.FontFamily>
					</Label>
					<Label Grid.Column="0"
						Grid.Row="3"
						FontAttributes="Bold"
						Text="Wednesday">
						<Label.FontFamily>
							<OnPlatform x:TypeArguments="x:String">
								<On Platform="Android" Value="BebasNeue Bold.ttf#BebasNeue Bold" />
							</OnPlatform>
						</Label.FontFamily>
					</Label>
					<Label Grid.Column="1"
						Grid.Row="3"
						HorizontalTextAlignment="End"
						Text="{Binding Wed_Hours}">
						<Label.FontFamily>
							<OnPlatform x:TypeArguments="x:String">
								<On Platform="Android" Value="Questrial-Regular.ttf#Questrial-Regular"/>
							</OnPlatform>
						</Label.FontFamily>
					</Label>
					<Label Grid.Column="2"
						Grid.Row="3"
						FontAttributes="Bold"
						Text="Thursday">
						<Label.FontFamily>
							<OnPlatform x:TypeArguments="x:String">
								<On Platform="Android" Value="BebasNeue Bold.ttf#BebasNeue Bold" />
							</OnPlatform>
						</Label.FontFamily>
					</Label>
					<Label Grid.Column="3"
						Grid.Row="3"
						HorizontalTextAlignment="End"
						Text="{Binding Thu_Hours}">
						<Label.FontFamily>
							<OnPlatform x:TypeArguments="x:String">
								<On Platform="Android" Value="Questrial-Regular.ttf#Questrial-Regular"/>
							</OnPlatform>
						</Label.FontFamily>
					</Label>
					<Label Grid.Column="0"
						Grid.Row="4"
						FontAttributes="Bold"
						Text="Friday">
						<Label.FontFamily>
							<OnPlatform x:TypeArguments="x:String">
								<On Platform="Android" Value="BebasNeue Bold.ttf#BebasNeue Bold" />
							</OnPlatform>
						</Label.FontFamily>
					</Label>
					<Label Grid.Column="1"
						Grid.Row="4"
						HorizontalTextAlignment="End"
						Text="{Binding Fri_Hours}">
						<Label.FontFamily>
							<OnPlatform x:TypeArguments="x:String">
								<On Platform="Android" Value="Questrial-Regular.ttf#Questrial-Regular"/>
							</OnPlatform>
						</Label.FontFamily>
					</Label>
					<Label Grid.Column="2"
						Grid.Row="4"
						FontAttributes="Bold"
						Text="Saturday">
						<Label.FontFamily>
							<OnPlatform x:TypeArguments="x:String">
								<On Platform="Android" Value="BebasNeue Bold.ttf#BebasNeue Bold" />
							</OnPlatform>
						</Label.FontFamily>
					</Label>
					<Label Grid.Column="3"
						Grid.Row="4"
						HorizontalTextAlignment="End"
						Text="{Binding Sat_Hours}">
						<Label.FontFamily>
							<OnPlatform x:TypeArguments="x:String">
								<On Platform="Android" Value="Questrial-Regular.ttf#Questrial-Regular"/>
							</OnPlatform>
						</Label.FontFamily>
					</Label>
					<Label Grid.Column="0"
						Grid.Row="5"
						FontAttributes="Bold"
						Text="Sunday">
						<Label.FontFamily>
							<OnPlatform x:TypeArguments="x:String">
								<On Platform="Android" Value="BebasNeue Bold.ttf#BebasNeue Bold" />
							</OnPlatform>
						</Label.FontFamily>
					</Label>
					<Label Grid.Column="1"
						Grid.Row="5"
						HorizontalTextAlignment="End"
						Text="{Binding Sun_Hours}">
						<Label.FontFamily>
							<OnPlatform x:TypeArguments="x:String">
								<On Platform="Android" Value="Questrial-Regular.ttf#Questrial-Regular"/>
							</OnPlatform>
						</Label.FontFamily>
					</Label>
					<Label Grid.Column="0"
						Grid.Row="6"
						FontAttributes="Bold"
						Text="Total Hours">
						<Label.FontFamily>
							<OnPlatform x:TypeArguments="x:String">
								<On Platform="Android" Value="BebasNeue Bold.ttf#BebasNeue Bold" />
							</OnPlatform>
						</Label.FontFamily>
					</Label>
					<Label Grid.Column="3"
						Grid.Row="6"
						HorizontalTextAlignment="End"
						Text="{Binding Total_Hours}">
						<Label.FontFamily>
							<OnPlatform x:TypeArguments="x:String">
								<On Platform="Android" Value="Questrial-Regular.ttf#Questrial-Regular"/>
							</OnPlatform>
						</Label.FontFamily>
					</Label>
					<Image Source="notes.png"
						Grid.Column="0"
						Grid.Row="7"/>
					<Label Grid.Column="1"
						Grid.Row="7"
						Grid.ColumnSpan="2"
						CharacterSpacing="2"
						Padding="15, 0, 0, 0"
						Text="Week Notes"
						FontSize="28"
						FontAttributes="Bold">
						<Label.FontFamily>
							<OnPlatform x:TypeArguments="x:String">
								<On Platform="Android" Value="BebasNeue Bold.ttf#BebasNeue Bold" />
							</OnPlatform>
						</Label.FontFamily>
					</Label>
					<Label Grid.Column="0"
						Grid.Row="8"
						Text="Monday">
						<Label.FontFamily>
							<OnPlatform x:TypeArguments="x:String">
								<On Platform="Android" Value="BebasNeue Bold.ttf#BebasNeue Bold" />
							</OnPlatform>
						</Label.FontFamily>
					</Label>
					<Label Grid.Column="0"
						Grid.ColumnSpan="4"
						Grid.Row="9"
						Text="{Binding Mon_Note}">
						<Label.FontFamily>
							<OnPlatform x:TypeArguments="x:String">
								<On Platform="Android" Value="Questrial-Regular.ttf#Questrial-Regular"/>
							</OnPlatform>
						</Label.FontFamily>
					</Label>
					<Label Grid.Column="0"
						Grid.ColumnSpan="4"
						Grid.Row="10"
						BackgroundColor="#15212f"/>
					<Label Grid.Column="0"
						Grid.Row="11"
						Text="Tuesday">
						<Label.FontFamily>
							<OnPlatform x:TypeArguments="x:String">
								<On Platform="Android" Value="BebasNeue Bold.ttf#BebasNeue Bold" />
							</OnPlatform>
						</Label.FontFamily>
					</Label>
					<Label Grid.Column="0"
						Grid.Row="12"
						Grid.ColumnSpan="4"
						Text="{Binding Tue_Note}">
						<Label.FontFamily>
							<OnPlatform x:TypeArguments="x:String">
								<On Platform="Android" Value="Questrial-Regular.ttf#Questrial-Regular"/>
							</OnPlatform>
						</Label.FontFamily>
					</Label>
					<Label Grid.Column="0"
						Grid.ColumnSpan="4"
						Grid.Row="13"
						BackgroundColor="#15212f"/>
					<Label Grid.Column="0"
						Grid.Row="14"
						Text="Wednesday">
						<Label.FontFamily>
							<OnPlatform x:TypeArguments="x:String">
								<On Platform="Android" Value="BebasNeue Bold.ttf#BebasNeue Bold" />
							</OnPlatform>
						</Label.FontFamily>
					</Label>
					<Label Grid.Column="0"
						Grid.Row="15"
						Grid.ColumnSpan="4"
						Text="{Binding Wed_Note}">
						<Label.FontFamily>
							<OnPlatform x:TypeArguments="x:String">
								<On Platform="Android" Value="Questrial-Regular.ttf#Questrial-Regular"/>
							</OnPlatform>
						</Label.FontFamily>
					</Label>
					<Label Grid.Column="0"
						Grid.ColumnSpan="4"
						Grid.Row="16"
						BackgroundColor="#15212f"/>
					<Label Grid.Column="0"
						Grid.Row="17"
						Text="Thursday">
						<Label.FontFamily>
							<OnPlatform x:TypeArguments="x:String">
								<On Platform="Android" Value="BebasNeue Bold.ttf#BebasNeue Bold" />
							</OnPlatform>
						</Label.FontFamily>
					</Label>
					<Label Grid.Column="0"
						Grid.Row="18"
						Grid.ColumnSpan="4"
						Text="{Binding Thu_Note}">
						<Label.FontFamily>
							<OnPlatform x:TypeArguments="x:String">
								<On Platform="Android" Value="Questrial-Regular.ttf#Questrial-Regular"/>
							</OnPlatform>
						</Label.FontFamily>
					</Label>
					<Label Grid.Column="0"
						Grid.ColumnSpan="4"
						Grid.Row="19"
						BackgroundColor="#15212f"/>
					<Label Grid.Column="0"
						Grid.Row="20"
						Text="Friday">
						<Label.FontFamily>
							<OnPlatform x:TypeArguments="x:String">
								<On Platform="Android" Value="BebasNeue Bold.ttf#BebasNeue Bold" />
							</OnPlatform>
						</Label.FontFamily>
					</Label>
					<Label Grid.Column="0"
						Grid.Row="21"
						Grid.ColumnSpan="4"
						Text="{Binding Fri_Note}">
						<Label.FontFamily>
							<OnPlatform x:TypeArguments="x:String">
								<On Platform="Android" Value="Questrial-Regular.ttf#Questrial-Regular"/>
							</OnPlatform>
						</Label.FontFamily>
					</Label>
					<Label Grid.Column="0"
						Grid.ColumnSpan="4"
						Grid.Row="22"
						BackgroundColor="#15212f"/>
					<Label Grid.Column="0"
						Grid.Row="23"
						Text="Saturday">
						<Label.FontFamily>
							<OnPlatform x:TypeArguments="x:String">
								<On Platform="Android" Value="BebasNeue Bold.ttf#BebasNeue Bold" />
							</OnPlatform>
						</Label.FontFamily>
					</Label>
					<Label Grid.Column="0"
						Grid.Row="24"
						Grid.ColumnSpan="4"
						Text="{Binding Sat_Note}">
						<Label.FontFamily>
							<OnPlatform x:TypeArguments="x:String">
								<On Platform="Android" Value="Questrial-Regular.ttf#Questrial-Regular"/>
							</OnPlatform>
						</Label.FontFamily>
					</Label>
					<Label Grid.Column="0"
						Grid.ColumnSpan="4"
						Grid.Row="25"
						BackgroundColor="#15212f"/>
					<Label Grid.Column="0"
						Grid.Row="26"
						Text="Sunday">
						<Label.FontFamily>
							<OnPlatform x:TypeArguments="x:String">
								<On Platform="Android" Value="BebasNeue Bold.ttf#BebasNeue Bold" />
							</OnPlatform>
						</Label.FontFamily>
					</Label>
					<Label Grid.Column="0"
						Grid.ColumnSpan="4"
						Grid.Row="27"
						Text="{Binding Sun_Note}">
						<Label.FontFamily>
